gem 'kaminari'

group :test do
  gem 'ruby_gntp'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'ruby-debug19'
end

group :development do
  gem 'spork'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'guard-cucumber'
  gem 'rb-fsevent'
end

